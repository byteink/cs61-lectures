+    }
+    vmiter(pt, CONSOLE_ADDR).map(CONSOLE_ADDR, PTE_P | PTE_W | PTE_U);
+    for (uintptr_t a = first_addr; a != last_addr; a += PAGESIZE) {
+        vmiter(pt, a).map(a, PTE_P | PTE_W | PTE_U);
